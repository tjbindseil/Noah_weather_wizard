{
    "name": "ts-postgres",
    "version": "1.8.0",
    "description": "PostgreSQL client in TypeScript",
    "declaration": true,
    "keywords": [
        "database",
        "postgres",
        "postgresql",
        "rdbms"
    ],
    "homepage": "https://github.com/malthe/ts-postgres",
    "main": "dist/src/index.js",
    "types": "dist/src/index.d.ts",
    "author": "Malthe Borch <mborch@gmail.com>",
    "dependencies": {
        "ts-typed-events": "^3.0.0"
    },
    "files": [
        "/dist",
        "/src"
    ],
    "repository": {
        "type": "git",
        "url": "git://github.com/malthe/ts-postgres.git"
    },
    "license": "MIT",
    "engines": {
        "node": ">=18.0.0"
    },
    "minNativeVersion": "2.3.0",
    "scripts": {
        "lint": "eslint -c .eslintrc.json --ext .ts src test",
        "prebuild": "rimraf dist",
        "build": "tsc",
        "test": "jest --verbose --unhandled-rejections=strict --detectOpenHandles --silent false",
        "test:watch": "jest --watch",
        "test:prod": "npm run lint && npm run test -- --coverage --no-cache --testTimeout=5000"
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node",
        "coveragePathIgnorePatterns": [
            "/node_modules/",
            "/test/",
            "/src/defaults.ts",
            "/src/index.ts",
            "/src/logging.ts",
            "/src/queue.ts",
            "/src/sasl.ts",
            "/src/utils.ts"
        ],
        "coverageThreshold": {
            "global": {
                "branches": 70,
                "functions": 80,
                "lines": 85,
                "statements": 85
            }
        },
        "collectCoverage": true
    },
    "prettier": {
        "semi": true,
        "singleQuote": true
    },
    "devDependencies": {
        "@jest/globals": "^29.7.0",
        "@types/node": "^18.15.3",
        "@typescript-eslint/eslint-plugin": "^6.10.0",
        "@typescript-eslint/parser": "^6.10.0",
        "colors": "^1.4.0",
        "eslint": "^8.53.0",
        "eslint-config-standard": "^17.1.0",
        "eslint-plugin-import": "^2.29.0",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-prettier": "^5.0.1",
        "eslint-plugin-promise": "^6.1.1",
        "jest": "^29.7.0",
        "lint-staged": "^15.0.2",
        "rimraf": "^3.0.2",
        "ts-jest": "^29.1.1",
        "ts-node": "^10.9.1",
        "typedoc": "^0.25.4",
        "typescript": "^4.9.5"
    }
}
